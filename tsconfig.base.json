{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "strict": false,
    "paths": {
      "@booking/backend-contacts-feature": [
        "libs/backend/contacts/feature/src/index.ts"
      ],
      "@booking/backend-firebase-feature": [
        "libs/backend/firebase/feature/src/index.ts"
      ],
      "@booking/backend-users-data-access": [
        "libs/backend/users/data-access/src/index.ts"
      ],
      "@booking/backend-users-feature": [
        "libs/backend/users/feature/src/index.ts"
      ],
      "@booking/backend-auth-data-access": [
        "libs/backend/auth/data-access/src/index.ts"
      ],
      "@booking/backend-auth-feature": [
        "libs/backend/auth/feature/src/index.ts"
      ],

      "@booking/backend-contacts-data-access": [
        "libs/backend/contacts/data-access/src/index.ts"
      ],
      "@booking/frontend-contacts-data-access": [
        "libs/frontend/contacts/data-access/src/index.ts"
      ],
      "@booking/frontend-contacts-feature-list": [
        "libs/frontend/contacts/feature/list/src/index.ts"
      ],
      "@booking/frontend-contacts-feature-routing": [
        "libs/frontend/contacts/feature/routing/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
